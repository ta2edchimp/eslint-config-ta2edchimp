{
  "extends": "idiomatic",
  "env": {
    "browser": true,
    "node": true,
    "es6": false
  },
  "rules": {
    "accessor-pairs": [ 2 ],
    "array-callback-return": [ 2 ],
    "arrow-body-style": [ 2, "as-needed" ],
    "arrow-parens": [ 2, "always" ],
    "block-scoped-var": [ 2 ],
    "callback-return": [ 2, [ "callback", "cb", "fn", "next" ] ],
    "camelcase": [ 2, { "properties": "always" } ],
    "consistent-return": [ 2 ],
    "consistent-this": [ 2, "that" ],
    "constructor-super": [ 2 ],
    "default-case": [ 2 ],
    "dot-notation": [ 2, { "allowKeywords": true, "allowPattern": "" } ],
    "func-style": [ 2, "declaration", { "allowArrowFunctions": true } ],
    "generator-star-spacing": [ 2, { "before": true, "after": false } ],
    "global-require": [ 1 ],
    "guard-for-in": [ 2 ],
    "handle-callback-err": [ 2, "^.*(e|E)rr" ],
    "id-blacklist": [ 1, "err", "e", "cb", "callback" ],
    "id-length": [ 1, { "min": 2, "properties": "never" } ],
    "id-match": [ 1, "^[a-z]+([A-Z][a-z]+)*$", { "properties": true } ],
    "indent": [ 2, 2, { "SwitchCase": 1 } ],
    "init-declarations": [ 1, "always" ],
    "jsx-quotes": [ 2, "prefer-double" ],
    "lines-around-comment": [ 2, { "beforeBlockComment": true, "beforeLineComment": true, "allowBlockStart": true, "allowObjectStart": true, "allowArrayStart": true } ],
    "max-depth": [ 1, { "maximum": 4 } ],
    "max-len": [ 2, { "code": 80, "tabWidth": 4, "ignoreUrls": true } ],
    "max-nested-callbacks": [ 2, { "maximum": 5 } ],
    "max-params": [ 1, { "maximum": 2 } ],
    "max-statements": [ 2, { "maximum": 10 }, { "ignoreTopLevelFunctions": true } ],
    "new-cap": [ 2 ],
    "newline-after-var": [ 1, "always" ],
    "newline-before-return": [ "error" ],
    "newline-per-chained-call": [ 2, { "ignoreChainWithDepth": 3 } ],
    "no-bitwise": [ 2, { "allow": [ "~" ], "int32Hint": true } ],
    "no-caller": [ 2 ],
    "no-case-declarations": [ 2 ],
    "no-class-assign": [ 2 ],
    "no-confusing-arrow": [ 2 ],
    "no-console": [ 2 ],
    "no-const-assign": [ 2 ],
    "no-continue": [ 0 ],
    "no-dupe-class-members": [ 2 ],
    "no-else-return": [ 2 ],
    "no-empty-function": [ 1 ],
    "no-empty-pattern": [ 2 ],
    "no-extra-label": [ 2 ],
    "no-extra-parens": [ 2, "all", { "conditionalAssign": false } ],
    "no-implicit-coercion": [ 0 ],
    "no-implicit-globals": [ 2 ],
    "no-label-var": [ 2 ],
    "no-magic-numbers": [ 2 ],
    "no-mixed-requires": [ 2, { "grouping": true, "allowCall": true } ],
    "no-multiple-empty-lines": [2, { "max": 2, "maxBOF": 0, "maxEOF": 1 } ],
    "no-negated-condition": [ 0 ],
    "no-nested-ternary": [ 2 ],
    "no-new-require": [ 2 ],
    "no-new-symbol": [ 2 ],
    "no-path-concat": [ 2 ],
    "no-plusplus": [ 2, { "allowForLoopAfterthoughts": true } ],
    "no-process-env": [ 2 ],
    "no-process-exit": [ 2 ],
    "no-proto": [ 2 ],
    "no-self-assign": [ 2 ],
    "no-ternary": [ 0 ],
    "no-this-before-super": [ 2 ],
    "no-undef-init": [ 2 ],
    "no-undefined": [ 2 ],
    "no-underscore-dangle": [ 2, { "allowAfterThis": true } ],
    "no-unexpected-multiline": [ 2 ],
    "no-useless-call": [ 2 ],
    "no-useless-constructor": [ 2 ],
    "no-whitespace-before-property": [ 2 ],
    "operator-assignment": [ 2, "always" ],
    "operator-linebreak": [ 2, "after" ],
    "padded-blocks": [ 2, { "blocks": "never", "switches": "never", "classes": "always" } ],
    "quote-props": [ 2, "as-needed" ],
    "require-jsdoc": [ 1, { "require": { "FunctionDeclaration": true, "MethodDefinition": true, "ClassDeclaration": true } } ],
    "semi": [ 2, "always" ],
    "sort-vars": [ 1, { "ignoreCase": true } ],
    "spaced-comment": [ 2, "always" ],
    "strict": [2, "safe" ],
    "valid-jsdoc": [ 1 ],
    "wrap-iife": [ 2, "inside" ],
    "wrap-regex": [ 0 ],
    "yoda": [ 2, "always" ]
  }
}
